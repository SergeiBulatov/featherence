<?xml version="1.0" encoding="UTF-8"?>
<window>
	<visible>[Window.IsVisible(VideoOSD.xml) | Window.IsActive(fullscreeninfo) | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding] + VideoPlayer.IsFullscreen</visible>
	<visible>!Window.IsVisible(DialogSubtitles.xml) + !Window.IsVisible(MusicOSD.xml)</visible>
	<controls>
		<include>featherencepause</include>
		
		<include>ForwardingRewinding</include>
		
		<include>TopInformation</include>
		<control type="group" description="!VideoPlayer.Content(LiveTV)">
			<animation effect="slide" start="0,90" end="0,0" time="200">WindowOpen</animation>
			<animation effect="slide" start="0,90" end="0,0" time="200">VisibleChange</animation>
			<top>1014</top>
			<visible>!VideoPlayer.Content(LiveTV)</visible>
			<control type="image">
				<left>0</left>
				<top>4</top>
				<width>1920</width>
				<height>70</height>
				<texture border="1,32,1,1">osd/bottombar.png</texture>
			</control>
			<control type="label" id="402">
			  <font>size24</font>
			  <posx>7</posx>
			  <posy>7</posy>
			</control>
			<control type="progress">
				<left>0</left>
				<top>27</top>
				<width>1920</width>
				<height>35</height>
				<texturebg>osd/texturebg.png</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture>osd/midtexture_cache.png</midtexture>
				<righttexture>-</righttexture>
				<overlaytexture>-</overlaytexture>
				<info>Player.ProgressCache</info>
			</control>
			<control type="progress" id="23">
				<left>0</left>
				<top>27</top>
				<width>1920</width>
				<height>35</height>
				<texturebg>osd/texturebg_cache.png</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture>osd/midtexture.png</midtexture>
				<righttexture>-</righttexture>
				<overlaytexture>-</overlaytexture>
				<info>Player.Progress</info>
			</control>
			<control type="slider" id="401">
				<!--<action>seek</action>-->
				<left>0</left>
				<top>27</top>
				<width>1920</width>
				<height>19</height>
				<texturesliderbar>osd/texturebg.png</texturesliderbar>
				<textureslidernib colordiffuse="BBBBBBBB">osd/midtexture.png</textureslidernib>
				<textureslidernibfocus bordercolordiffuse="yellow">osd/midtexture.png</textureslidernibfocus>
				<visible>Player.Seeking</visible>
			</control>
		</control>
	</controls>
</window>